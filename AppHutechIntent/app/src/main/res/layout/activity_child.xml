<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChildActivity">
    <LinearLayout
        android:id="@+id/liner1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="300px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/download" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="200px"
            android:layout_height="89dp"
            android:layout_weight="1"
            android:src="@drawable/logo"/>

    </LinearLayout>
    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/liner1"
        android:text="Hutech trao quyết định bổ nhiệm tân phó giáo sư Trần Quốc Thao, Phó giáo sư Trần Minh Trí và 2 tân Phó viện trưởng viện Đào tạo Quốc tế"
        android:textColor="#03A9F4"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView6"
        android:drawableLeft="@drawable/ic_dashboard_black_24dp"
        android:drawablePadding="8dp"
        android:layout_marginTop="8dp"
        android:text="07/12/2023"
        android:textSize="16sp" />
    <LinearLayout
        android:id="@+id/icon"
        android:layout_width="114dp"
        android:layout_height="27dp"
        android:layout_below="@id/textView8"
        android:layout_alignParentRight="true"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/mes"
            />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/zalo"
            />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/twitter"
             />
    </LinearLayout>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/icon"
        android:text="Ngày 05/12, trường Đại Học Công Nghệ TP. Hồ Chí Minh tra quyết định bổ nhiệm và vinh danh 2 taan phó giáo sư Trần Quốc Thao,  Phó giáo sư Nguyễn Minh Trí vừa được hội đồng giáo sư nhà nước công nhận đạt tiêu chuẩn chức danh phó giáo sư năm 2023 "
        android:textSize="30sp" />


</RelativeLayout>
